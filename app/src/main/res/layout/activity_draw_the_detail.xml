<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/C_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/C_main">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/zuojiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提款明细"
            android:textColor="@color/C_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/C_white">

        <TextView
            android:id="@+id/starting_time_tv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shijian_bg"
            android:drawableLeft="@drawable/shijian"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="起始时间" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/starting_time_tv"
            android:background="@drawable/shijian_bg"
            android:drawableLeft="@drawable/shijian"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="结束时间" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="#e72133"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#fff" />
    </RelativeLayout>


</LinearLayout>