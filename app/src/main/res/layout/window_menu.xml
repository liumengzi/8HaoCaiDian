<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:id="@+id/rl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/C_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#eeeeee">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="赛事筛选"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="清空"
                android:textColor="@color/C_red" />
        </RelativeLayout>

        <com.tuding.client.eightnumcolour.view.MyGridView

            android:id="@+id/grid_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="30dp"
            android:numColumns="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#eeeeee"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="赔率筛选"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赔率小于："
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/input_odds_et"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/b_edit_line_shape"
                android:hint="请输入赔率"
                android:inputType="number"
                android:padding="2dp"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="赔率筛选范围：足球 胜平负/让球胜平负;篮球 胜负/让分胜负"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b_edit_line_shape"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/b_edit_line_shape"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/C_red" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>